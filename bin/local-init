#!/usr/bin/env bash

set -e

readonly PARENT_DIR=$(cd $(dirname "${BASH_SOURCE[0]}") && pwd -P)
readonly LOCALENV_DIR=$(cd $(dirname $(dirname $(dirname "$PARENT_DIR"))) && pwd -P)

readonly APP_DIR=$(cd $(dirname "$PARENT_DIR") && pwd -P)

source $LOCALENV_DIR/bin/utils/shell-helpers.sh

# Main function
main() {
  echo_yellow "Initializing localenv-example repo..."

  # Setup local database
  # $LOCALENV_DIR/bin/utils/setup-local-postgres-database \
  #   -c global-postgres \
  #   -n localenv-example \
  #   -u postgres

  (
    # Make sure script is running from the main application directory
    cd $APP_DIR

    # Build docker images
    docker-compose build

    # Install dependencies
    docker-compose run localenv-example composer install

    # Start docker containers
    docker-compose up -d
  )

  echo_green "localenv-example repo initialized successfully!\n"
}

main
